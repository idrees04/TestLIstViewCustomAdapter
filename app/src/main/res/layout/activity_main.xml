<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#ffffff">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#FC9"
                android:textColor="#000"
                android:weightSum="100">

                <TextView
                    android:id="@+id/text_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Class"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:gravity="start"
                    android:layout_weight="20"
                    />

                <TextView
                    android:id="@+id/text_teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/text_class"
                    android:text="Teachers"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_weight="20"
                    />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/text_teacher"
                    android:paddingLeft="25dp"
                    android:text="Status"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_weight="20"
                    />

                <TextView
                    android:id="@+id/Attendance_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/text_status"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Attendance"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_weight="20"
                    />
                <TextView
                    android:id="@+id/submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@+id/Attendance_Time"
                    android:paddingLeft="10dp"
                    android:text="Submit"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:layout_weight="20"
                    />
            </RelativeLayout>

            <ListView
                android:id="@+id/listview1"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"></ListView>
        </RelativeLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#FC9">

        <Spinner
            android:id="@+id/spinner_Class_days"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@color/spinnerBackground"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            />

        <Spinner
            android:id="@+id/spinner_Class_StartTime"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:background="@color/spinnerBackground"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/spinner_Class_days"
            android:layout_alignParentTop="true" />
        <Spinner
            android:id="@+id/spinner_Class_EndTime"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:background="@color/spinnerBackground"
            android:layout_toRightOf="@id/spinner_Class_StartTime"
            android:layout_alignParentTop="true"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btn_showTimeTable"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginLeft="2dp"
            android:background="@color/spinnerBackground"
            android:layout_toRightOf="@id/spinner_Class_EndTime"
            android:layout_alignParentTop="true"
            android:text="Show Class"
            android:layout_margin="2dp"
            />
        <!--<TextClock-->
            <!--android:id="@+id/text_clock"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textColor="#000"-->
            <!--android:textSize="16sp"-->
            <!--android:layout_margin="5dp"-->
            <!--android:format12Hour="hh:mm:ss"-->
            <!--android:layout_alignParentRight="true"-->
            <!--/>-->
        <!--android:format12Hour="hh:mm:ss a"-->
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header1" />
</RelativeLayout>